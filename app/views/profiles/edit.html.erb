<h1>プロフィール編集</h1>

<%= render 'shared/error_messages', obj: @user %>

<div>
  <%= link_to "アカウント情報", account_path, class:"btn btn-success" %>
  <%= link_to "プロフィール", profile_path, class: "btn btn-info" %>
</div>

<%= form_with model: @user, url: profile_path(current_user), local: true do |f| %>
  <div class="form-group">  
    <%= f.label :image, "プロフィール画像" %>
    <%= f.file_field :image %>
    <% if @user.image.present? %>
      <%= image_tag @user.image.thumb.url %>
    <% else %>
      <%= image_tag 'default.png' %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "自己紹介" %>
    <%= f.text_area :introduction, class:"form-control" %>
  </div>

  <div>
    <%= f.submit "登録完了する", class:"btn btn-primary" %>
  </div>
<% end %>

<%= link_to "トップページへ戻る", root_path, class:"btn btn-secondary" %>
