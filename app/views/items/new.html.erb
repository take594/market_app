<h1>商品を出品する</h1>

<%= render 'shared/error_messages', obj: @item %>

<%= form_with model: @item do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :price, "値段" %>
    <%= f.text_field :price, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category, "カテゴリー" %>
    <%= f.select :category,options_for_select([["ファッション", "ファッション"],["ホビー", "ホビー"],["ゲーム", "ゲーム"],["本", "本"],["スポーツ", "スポーツ"]]), class:"form-select" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "商品紹介" %>
    <%= f.text_field :introduction, class:"form-control" %>
  </div>
  
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :onSale, value: true %>
  <%= f.hidden_field :interest, value: 0 %>

  <div>
    <%= f.submit "この商品を出品する", class:"btn btn-primary" %>
  </div>

<% end %>

<div>
  <%= link_to "トップページへ戻る", root_path %>
</div>
