<h1 class="text-success">購入した商品の詳細</h1>

<table class="table table-bordered w-50">
  <tr>
    <th>商品画像</th>
    <td><%= image_tag @purchase.item.image.url %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= @purchase.item.title %></td>
  </tr>
  <tr>
    <th>気になる数</th>
    <td><%= @purchase.item.interest %></td>
  </tr>
  <tr>
    <th>値段</th>
    <td><%= @purchase.item.price %></td>
  </tr>
  <tr>
    <th>商品紹介文</th>
    <td><%= @purchase.item.introduction %></td>
  </tr>
  <tr>
    <th>出品者</th>
    <td><%= @purchase.created_at.to_s(:datetime_jp) %></td>
  </tr>
</table>

<% if @purchase.arrived? %>
<% else %>
  <div>
    <%= link_to "商品が届いたことを報告する", edit_purchase_path(@purchase), class: "btn btn-primary" %>
  </div>
  <% if @purchase.item.deliveryStatus==false %>
    <div>
      <%= render "shared/destroyPurchase", purchase: @purchase %>
    <div>
  <% else %>
  <% end %>
<% end %>

<div>
  <%= link_to "トップページへ戻る", root_path, class:"btn btn-success" %>
</div> 
