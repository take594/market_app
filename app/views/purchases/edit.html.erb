<h1 class="text-success">商品の到着状況を報告する</h1>

<%= render 'shared/error_messages', obj: @purchase %>

<%= form_with model: @purchase do |f| %>
  <div class="form-group">
    <%= f.label :arrived, "到着状況" %>
    <%= f.select :arrived, options_for_select([["届いた", true],["届いていない", false]]), class:"form-select" %>
  </div>
  <div class="form-group">
    <%= f.label :rate, "出品者の評価" %>
    <%= f.select :rate, options_for_select([["よかった", 1],["イマイチ", 0]]) %>
  </div>

  <div>
    <%= f.submit "商品の到着状況を報告する", class:"btn btn-primary" %>
  <div>
<% end %>

<%= link_to "購入履歴一覧へ", purchases_path %>
