<h1>商品の購入履歴</h1>

<% if @purchases.present? %>
  <% @purchases.each do |purchase| %>
    <div class="card" style="width: 18rem;">
      <%= image_tag purchase.item.image.url, class:"card-image-top" %>
      <div class="card-body">
        <h5><%= purchase.item.title %></h5>
        <table>
          <tr>
            <th>値段</th>
            <td><%= purchase.item.price %>円</td>
          </tr>
          <tr>
            <th>販売状況</th>
            <td>
              <% if purchase.item.onSale? %>
                販売中
              <% else %>
                売り切れ
              <% end %>  
            </td>
          </tr>
        </table>
        <div><%= link_to "詳細へ", purchase, class: "btn btn-primary" %></div>
      </div>
    </div>
  <% end %>

<% else %>

<p>購入した商品はありません</p>

<% end %>

<%= link_to "トップページへ戻る", root_path, class:"btn btn-success" %>
